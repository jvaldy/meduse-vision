                        <div class="signup-content mt-4">
                    <span>
                      <img src="{{asset('../assets/images/logo/1.png')}}" alt="" class="img-fluid ">
                    </span>
                        </div>

                        <div class="signup-bg-img">
                            <img src="{{asset('../assets/images/login/02.png')}}" alt="" class="img-fluid">
                        </div>

                    </div>
                </div>










