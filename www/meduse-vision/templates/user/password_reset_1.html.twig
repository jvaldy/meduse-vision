<!DOCTYPE html>
<html lang="en">

<head>
    <!-- All meta and title start-->
    {% include "layout/head.html.twig" %}
    <!-- meta and title end-->
    <title> {% block title %}Password Reset Bg  {% endblock %} | Ra-admin - Premium Admin Template</title>
    <!-- css start-->
    {% include "layout/css.html.twig" %}
    {% block css %}
        <!-- App css-->
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">

        <!-- Responsive css-->
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/responsive.css') }}">
    {% endblock %}

    <!-- css end-->
</head>

<body>
<div class="app-wrapper d-block">
    <div class="">
        <!-- Body main section starts -->
        <main class="w-100 p-0">
            <div class="container-fluid">
                <!-- Reset Your Password start -->
                <div class="row">
                    <div class="col-12 p-0">
                        <div class="login-form-container">
                            <div class="mb-4">
                                <a class="logo d-inline-block" href="{{path('index')}}">
                                    <img src="{{asset('../assets/images/logo/1.png')}}" width="250" alt="#">
                                </a>
                            </div>
                            <div class="form_container">
                                <form class="app-form">
                                
                                    <div class="mb-3 text-center">
                                        <h3>Réinitialiser votre mot de passe</h3>
                                        <p class="f-s-12 text-secondary">Vous recevrez un email de réinitialisation.</p>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="username" class="form-label">Email</label>
                                        <input type="email" class="form-control" placeholder="Entrez votre email" id="email" required>
                                    </div>
                                    
                                    <div>
                                        <a href="{{('../reset2')}}" role="button" class="btn btn-primary w-100">Réinitialiser le mot de passe</a>
                                    </div><br>

                                    <div class="col-12">
                                        <div class="text-center text-lg-start">
                                            Mon compte fonctionne ? <a href="{{ ('../sign/in') }}"
                                                                    class="link-primary text-decoration-underline"> Se connecter</a>
                                        </div>
                                    </div>
                                    
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Reset Your Password end -->
            </div>
        </main>
        <!-- Body main section ends -->
    </div>
</div>
</body>

{% block scripts %}
    <!-- latest jquery-->
    <script src="{{asset('assets/js/jquery-3.6.3.min.js')}}"></script>

    <!-- Bootstrap js-->
    <script src="{{asset('assets/vendor/bootstrap/bootstrap.bundle.min.js')}}"></script>
{% endblock %}
